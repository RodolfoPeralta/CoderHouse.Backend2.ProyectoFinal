<div class="productsContainer">
    <h2>Lista de productos</h2>
        {{#if error}}
            <p>Error leyendo productos desde la base de datos.</p>
        {{else}}
            <div class="pagination">
                {{#if hasPrevPage}}
                    <a href="/views/products?page={{prevPage}}&limit=10&sort=asc">
                        <button>Anterior</button>
                    </a>
                {{/if}}
                <span>Página {{page}} de {{totalPages}}</span>
                {{#if hasNextPage}}
                    <a href="/views/products?page={{nextPage}}&limit=10&sort=asc">
                        <button>Siguiente</button>
                    </a>
                {{/if}}
            </div>
            <div id="productsContainer" class="products">
                {{#if products.length}}
                        {{#each products}}
                            <div class="item">
                                <span>Título:</span> {{this.title}} <br>
                                <span>Descripción:</span> {{this.description}} <br>
                                <span>Precio:</span> ${{this.price}} <br>
                                <span>Stock:</span> {{this.stock}}
                                <div class="btn-container">
                                    <button data-id="{{this._id}}" id="details-btn" class="detailsButton prod-btns">Ver detalle</button>
                                </div>
                                <br><br>
                                <div class="checkboxContainer">
                                    <label for="checkbox">Agregar al carrito</label>
                                    <input id="checkbox" name="checkbox" type="checkbox"/>
                                    <select name="cart-select" id="cart-select" disabled>
                                        {{#each ../carts}}
                                            <option value="{{this._id}}">{{this._id}}</option>
                                        {{/each}}
                                    </select>
                                    <button data-id="{{this._id}}" id="addToCart-btn" class="addToCartButton prod-btns" disabled>Agregar al carrito</button>
                                </div>
                            </div>
                        {{/each}}
                        {{else}}
                            <p>No hay productos que mostrar.</p>
                    {{/if}}
                </div>
        {{/if}}   
</div>

<script src="../../static/js/productsClient.js" defer></script>
    

